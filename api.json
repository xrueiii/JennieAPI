{
    "openapi": "3.0.1",
    "info": {
      "title": "Contest API",
      "description": "API for managing contests and their associated homework files.",
      "version": "1.0.0"
    },
    "servers": [
      { "url": "http://localhost:8080/contest" }
    ],
    "paths": {
      "/add": {
        "post": {
          "summary": "Add a new contest with associated homework PDFs",
          "operationId": "addContest",
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pdfFiles": {
                      "type": "array",
                      "items": { "type": "string", "format": "binary" },
                      "description": "List of PDF files"
                    },
                    "contest": {
                      "type": "string",
                      "description": "JSON string representing ContestBO"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": { "description": "Contest created successfully" },
            "400": { "description": "Bad request (invalid JSON or missing data)" },
            "500": { "description": "Internal server error" }
          }
        }
      },
      "/all": {
        "get": {
          "summary": "Get all contests",
          "operationId": "getAllContest",
          "responses": {
            "200": {
              "description": "List of contests",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/ContestBO" }
                  }
                }
              }
            }
          }
        }
      },
      "/getByName/{name}": {
        "get": {
          "summary": "Get contest by name",
          "operationId": "getContestByName",
          "parameters": [
            {
              "name": "name",
              "in": "path",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Contest found",
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/ContestBO" }
                }
              }
            },
            "404": { "description": "Contest not found" }
          }
        }
      },
      "/{contestName}/update/starttime": {
        "put": {
          "summary": "Update contest start time",
          "operationId": "updateStartTime",
          "parameters": [
            {
              "name": "contestName",
              "in": "path",
              "required": true,
              "schema": { "type": "string" }
            },
            {
              "name": "dateParam",
              "in": "query",
              "required": true,
              "schema": { "type": "string", "format": "date" }
            }
          ],
          "responses": {
            "200": { "description": "Start time updated" },
            "500": { "description": "Internal server error" }
          }
        }
      },
      "/{contestName}/update/endtime": {
        "put": {
          "summary": "Update contest end time",
          "operationId": "updateEndTime",
          "parameters": [
            {
              "name": "contestName",
              "in": "path",
              "required": true,
              "schema": { "type": "string" }
            },
            {
              "name": "dateParam",
              "in": "query",
              "required": true,
              "schema": { "type": "string", "format": "date" }
            }
          ],
          "responses": {
            "200": { "description": "End time updated" },
            "500": { "description": "Internal server error" }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "ContestBO": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "startTime": { "type": "string", "format": "date-time" },
            "endTime": { "type": "string", "format": "date-time" },
            "homeworks": {
              "type": "array",
              "items": { "$ref": "#/components/schemas/HomeworkBO" }
            }
          }
        },
        "HomeworkBO": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "pdf": { "type": "string", "format": "binary" }
          }
        }
      }
    }
  }
  